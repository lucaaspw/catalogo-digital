    <div class="container mt-4 background-img">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <section class="contact" id="contact">
        <div class="container">
            <div class="row">
                <div class=" col-sm-12">
                    <div class="headerText text-center">
                        <h2 data-aos="fade-up" data-aos-duration="1000" data-aos-delay="0">Entre em Contato</h2>
                        <p data-aos="fade-up" data-aos-duration="1000" data-aos-delay="500">Deixe-nos uma mensagem para sabermos mais sobre você :)</p>
                    </div>
                </div>
            </div>
            <div class="row clearfix">
                <div class="offset-sm-2 col-sm-8" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="1000">
                    <form>

                        <div class="form-group">
                            <label for="name">Nome</label>
                            <input type="text" name="name" class="form-control" id="name">
                        </div>
                        <div class="form-group">
                            <label for="email">E-mail</label>
                            <input type="text" name="" placeholder="exemplo@exemplo.com" class="form-control" id="email">
                        </div>
                        <div class="form-group">
                            <label for="tel">Telefone</label>
                            <input type="text" name="" placeholder="(99) 99999-9999" class="form-control" id="tel">
                        </div>
                        <div class="form-group">
                            <label for="mensagem">Mensagem</label>
                            <textarea name="msg" id="mensagem" cols="30" rows="2" class="form-control textarea"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btnD1" name="enviar">Enviar</button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </section>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <ul class="sci">
                        <li><a href="!#"><i class="fab fa-facebook"></i></a></li>
                        <li><a href="!#"><i class="fab fa-twitter-square"></i></a></li>
                        <li><a href="!#"><i class="fab fa-instagram"></i></a></li>
                        <li><a href="!#"><i class="fas fa-envelope"></i></a></li>

                    </ul>
                    <p class="cpryt">&copy; Todos os Direitos Reservados | CATÁLOGO DIGITAL INTERATIVO</p>
                </div>
            </div>
